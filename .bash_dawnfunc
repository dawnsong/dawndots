#!/bin/bash

function importrc(){
  test -f $1 && source $1
}


lsgz(){ gzip -l $@; }



#git 
importrc $HOME/.git-completion.bashrc


findgrep () {   # find | grep
  if [ $# -eq 0 ]; then
    echo "findgrep: No arguments entered."; return 1
  else
    # "{.[a-zA-Z],}*" instead of "." makes the output cleaner
    find {.[a-zA-Z],}* -type f | xargs grep -n $* /dev/null \
        2> /dev/null
  fi
}   

function sshto () {
  host=$1
  shift
  if [ $# -eq 0 ]; then 
    ssh -X $host -t "cd '$PWD'; bash --login"
  else 
    ssh $host -t "cd '$PWD'; bash --login" $@
  fi 
}


#python
export PYTHONSTARTUP=$HOME/.pythonrc.py
[[ -s "$HOME/.pythonbrew/etc/bashrc" ]] && source "$HOME/.pythonbrew/etc/bashrc"

